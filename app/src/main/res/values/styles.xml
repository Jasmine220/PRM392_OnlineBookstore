    </style>
    <style name="ButtonRedWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_red</item>
<!--        <item name="android:layout_marginHorizontal">15dp</item>-->
        <item name="android:textColor">@color/white_red</item>
    </style>

    <style name="ButtonGreen">
        <item name="android:layout_width">177dp</item>
        <item name="android:layout_height">49dp</item>
        <item name="android:background">@drawable/button_green</item>
        <item name="android:textColor">@color/green_deeper</item>
    </style>

    <style name="ButtonFullGreen">
        <item name="android:layout_width">177dp</item>
        <item name="android:layout_height">49dp</item>
        <item name="android:background">@drawable/button_full_green</item>
        <item name="android:textColor">@color/white</item>
    </style>

