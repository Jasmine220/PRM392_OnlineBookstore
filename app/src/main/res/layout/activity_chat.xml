<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Controller.Customer.ChatActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:cardCornerRadius="4dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Đây là nơi bạn có thể đặt các phần tử giao diện cho mỗi tin nhắn, chẳng hạn như hình ảnh, ngày giờ và nội dung tin nhắn. -->
            <!-- Ví dụ: -->
            <ImageView
                android:id="@+id/imageViewSenderAvatar"
                android:layout_width="62dp"
                android:layout_height="59dp"
                android:src="@drawable/ic_launcher_foreground" />

            <TextView
                android:id="@+id/textViewMessageContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewMessageTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>