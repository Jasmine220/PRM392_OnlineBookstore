<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.Customer.PaymentActivity">
    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"

            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton2"
                style="@style/ImageButton"
                android:layout_width="21dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/baseline_west_24" />

            <TextView
                android:id="@+id/textView8"
                style="@style/TextViewBold"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/green"
                android:gravity="center"
                android:text="Xác nhận đơn hàng" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"

                android:orientation="horizontal">

<!--                <ImageView-->
<!--                    android:id="@+id/imageView"-->
<!--                    android:layout_width="4dp"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:layout_weight="1"-->
<!--                    android:src="@tools:sample/avatars"-->
<!--                    tools:srcCompat="@drawable/baseline_pin_drop_24" />-->

                <TextView
                    android:id="@+id/tv_name_customer"
                    style="@style/TextView"
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="Dang Thuy Trang" />

                <TextView
                    android:id="@+id/tv_phone_customer"
                    style="@style/TextView"
                    android:textStyle="bold"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="03363256" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_address_customer"
                    android:layout_width="368dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="text"
                    android:hint="Nhập địa chỉ"
                    android:text="Name" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:itemIconTint="@color/lightgray"
                    android:backgroundTint="@color/white"
                    tools:srcCompat="@drawable/baseline_border_color_24" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            style="@style/TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp"
            android:text="Chọn hình thức giao hàng" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rd_shipping_method_normal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextViewsmall"
                    android:text="Giao hàng tiết kiệm" />

                <RadioButton
                    android:id="@+id/rd_shipping_method_fast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextViewsmall"
                    android:text="Giao hàng hỏa tốc" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextView"
            android:textStyle="bold"
            android:layout_marginHorizontal="10dp"
            android:text="Phương thức thanh toán" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rd_payment_method_direct"
                style="@style/TextViewsmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thanh toán tiền mặt" />

            <RadioButton
                android:id="@+id/rd_payment_method_vnpay"
                style="@style/TextViewsmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thanh toán bằng VNPay" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_cart_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="207dp"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_raw_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Raw price" />

            <TextView
                android:id="@+id/tv_price_shipping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="phi van chuyen" />

            <TextView
                android:id="@+id/tv_price_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tong tien" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="162dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView12"
                    style="@style/TextViewsmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="Tổng tiền" />

                <TextView
                    android:id="@+id/tv_price_total_final"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextViewsmall"
                    android:textColor="@color/red"
                    android:text="TextView" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_order"
                style="@style/ButtonRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Đặt hàng" />
        </LinearLayout>

